{
    "manifest_version": 2,
    "name": "YAAI: Yet another Aria2 Integrator",
    "version": "0.1.0",
    "description": "Use Aria2 for downloading content in Firefox",
    "permissions": [
        "storage",
        "tabs",
        "notifications",
        "downloads",
        "downloads.open",
        "webRequest",
        "webRequestBlocking",
        "cookies",
        "<all_urls>"
    ],
    "icons": {
        "48": "res/download-48.png",
        "96": "res/download-96.png"
    },
    "background": {
        "page": "background/background.html"
    },
    "options_ui": {
        "page": "options/options.html",
        "browser_style": true
    },
    "web_accessible_resources": ["popup/dialog.html"],
    "browser_specific_settings": {
        "gecko": {
            "id": "yaai@iamkroot",
            "strict_min_version": "57.0"
        }
    }
}